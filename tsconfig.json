{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "types": ["node", "jest"],
        "lib": ["ES2018"],
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "exclude": ["node_modules", "src/**/*.test.ts"]
}
